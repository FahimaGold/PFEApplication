<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.pc.pfe.WaistTrackingFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/hauteurS"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="152dp"
        android:text="Tour de taille "
        android:textColor="#0a2150"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <NumberPicker
        android:id="@+id/tourDeTailleSm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="76dp"
        android:solidColor="#eceff1"
        android:theme="@style/AppTheme.Picker"
        app:layout_constraintStart_toEndOf="@+id/hauteurS"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="80dp" />

    <TextView
        android:id="@+id/metre"
        android:layout_width="249dp"
        android:layout_height="48dp"
        android:layout_marginStart="304dp"
        android:layout_marginTop="152dp"
        android:text="cm"
        android:textColor="#0a2150"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="304dp" />

    <TextView
        android:id="@+id/valeurTourDeTaille"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="188dp"
        android:layout_marginTop="328dp"
        android:gravity="center"
        android:text=""
        android:textColor="#089455"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="188dp" />

    <Button
        android:id="@+id/btnVisualisationTourDeTaille"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:layout_marginTop="67dp"
        android:background="#f9a825"
        android:text="Visualisez votre tour de taille"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp"
        android:onClick="visualiserTourDeTaille"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTips"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

</android.support.constraint.ConstraintLayout>
