<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.pfe.CreateAccount"
    tools:ignore="InvalidId"
    tools:layout_editor_absoluteY="25dp"
    android:id="@+id/createAccountMainLayout">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#00c3f3"
        android:elevation="0dp"
        android:theme="@style/ToolBarStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="MissingConstraints">




        <Button
            android:id="@+id/diabete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="500dp"
            android:background="@android:color/transparent"
            android:onClick="afficherDiabeteSection"
            android:text="Votre diabÃ¨te"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/suivant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:background="@android:color/transparent"
            android:text="Suivant"
            android:layout_marginLeft="460dp"
            android:layout_marginRight="10dp"
            android:onClick="suivreSante"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp"
            tools:ignore="InvalidId" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/diabeteSection"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:elevation="2dp"
        android:gravity="top"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"></LinearLayout>


</android.support.constraint.ConstraintLayout>
