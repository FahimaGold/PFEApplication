<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.pfe.AboutYouFragment"
    tools:layout_editor_absoluteY="25dp">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="384dp"
        android:layout_height="567dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:src="@drawable/ic_suivi_sant"

            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="86dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/roundedbutton"
            android:padding="8dp"
            android:text="Suivez votre santé"
            android:textColor="#fff"
            android:textSize="20sp" />


    </FrameLayout>

    <NumberPicker
        android:id="@+id/poidsGramme"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:solidColor="#eceff1"
        android:theme="@style/AppTheme.Picker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:text="Kg."
        android:textColor="#0a2150"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/poidsActuel"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/hauteur"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:text="Taille "
        android:textColor="#0a2150"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv" />

    <NumberPicker
        android:id="@+id/hauteurM"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="28dp"
        android:solidColor="#eceff1"
        android:theme="@style/AppTheme.Picker"
        app:layout_constraintStart_toEndOf="@+id/hauteur"
        app:layout_constraintTop_toBottomOf="@+id/poidsActuel" />

    <NumberPicker
        android:id="@+id/hauteurC"
        android:layout_width="wrap_content"

        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="28dp"
        android:solidColor="#eceff1"
        android:theme="@style/AppTheme.Picker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poidsGramme" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="Genre "
        android:textColor="#0a2150"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hauteur" />

    <Spinner
        android:id="@+id/genre"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="16dp"
        android:entries="@array/Gender"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/hauteurM" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:background="#fff"
        android:padding="14dp"
        android:text="Afin de vous fournir de bonnes suggestions sur votre santé, nous avons besoins de connaitre plus de détails sur vous."
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/poidsActuel"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        android:solidColor="#eceff1"
        android:theme="@style/AppTheme.Picker"
        app:layout_constraintStart_toEndOf="@+id/tv"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="Poids actuel"
        android:textColor="#0a2150"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/metre"
        android:layout_width="18dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:text="m."
        android:textColor="#0a2150"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/hauteurM"
        app:layout_constraintTop_toBottomOf="@+id/poidsActuel" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Activité physique "
        android:textColor="#0a2150"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Spinner
        android:id="@+id/sport"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="28dp"
        android:entries="@array/Sport"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/genre" />


</android.support.constraint.ConstraintLayout>
